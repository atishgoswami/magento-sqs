<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="system">
            <group id="sqs" showInDefault="1" showInStore="0" showInWebsite="0" sortOrder="10" translate="label">
                <label>Amazon Simple Queue Service (SQS)</label>
                <field id="region" type="text" translate="label comment" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Region</label>
                    <comment>For example: eu-west-1</comment>
                </field>
                <field id="version" type="text" translate="label comment" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Version</label>
                    <comment>API version, for example: 2012-11-05</comment>
                </field>
                <field id="access_key" type="text" translate="label comment" sortOrder="30" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Access Key</label>
                </field>
                <field id="secret_key" type="password" translate="label comment" sortOrder="40" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Secret Key</label>
                </field>
                <field id="names_mapping" translate="label comment" sortOrder="50" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Queues names mapping</label>
                    <frontend_model>Belvg\Sqs\Block\Adminhtml\Form\Field\NamesMapping</frontend_model>
                    <backend_model>Magento\Config\Model\Config\Backend\Serialized\ArraySerialized</backend_model>
                </field>
            </group>
        </section>
    </system>
</config>